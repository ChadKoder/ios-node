<?xml version='1.0' encoding='utf-8'?>
<widget id="com.photo.dash" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Photo Dash</name>
    <description>
        Backup photos, images, and contacts
    </description>
    <author email="chadk241@gmail.com" href="github.com/ChadKoder">
        ChadKoder
    </author>
    <content src="index.html" />
    <access origin="cdvphotolibrary://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="cdvphotolibrary:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="700" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="750" />
    <preference name="SuppressesLongPressGesture" value="true" />
	 <preference name="StatusBarOverlaysWebView" value="true" />
	 <preference name="StatusBarBackgroundColor" value="#131313" />
	 <preference name="StatusBarStyle" value="lightcontent" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <splash height="1136" src="www/res/screen/ios/Default_2x_iphone.png" width="640" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-background-mode" spec="https://github.com/katzer/cordova-plugin-background-mode.git" />
    <plugin name="cordova-plugin-contacts" spec="~2.2.0">
        <variable name="CONTACTS_USAGE_DESCRIPTION" value="Backup or restore contacts" />
    </plugin>
    <plugin name="cordova-plugin-photo-library" spec="https://github.com/terikon/cordova-plugin-photo-library.git">
        <variable name="PHOTO_LIBRARY_USAGE_DESCRIPTION" value="Photo Dash wants access to your photo library for backup purposes" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="~4.3.1" />
	<plugin name="cordova-plugin-statusbar" spec="~2.2.2" />
</widget>
